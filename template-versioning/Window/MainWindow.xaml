<Window x:Class="template_versioning.Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:template_versioning"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding QuestionLists, Source={StaticResource Locator}}">
    <StackPanel>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding QuestionLists}"
                  SelectedItem="{Binding SelectedQuestionList, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="80" Header="Id" Binding="{Binding Number}" />
                <DataGridTextColumn Width="*" Header="Description" Binding="{Binding Description, Mode=TwoWay}" />
                <DataGridTextColumn Width="100" Header="Version" Binding="{Binding Version}" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>







